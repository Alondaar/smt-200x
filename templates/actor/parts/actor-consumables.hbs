<ol class='items-list'>
  <li class='item flexrow items-header'>
    <div class='item-name'>Consumable</div>
    <div class='item-controls'>
      <a class='item-control item-create' title='Create item' data-type='consumable'>
        <i class='fas fa-plus'></i>
      </a>
    </div>
  </li>
  <div class="grid-2col">
    {{#each consumables as |item id|}}
    <div>
      <li class='item flexrow' data-item-id='{{item._id}}'>
        <div class='item-name'>
          <div class='item-image'>
            <a class='rollable' data-roll-type='item'>
              <img src='{{item.img}}' title='{{item.name}}' width='24' height='24' />
            </a>
          </div>
          <h4>{{item.name}}</h4>
        </div>
        <!--<div class='item-prop'>{{item.system.type}}</div>
        <div class='item-prop clickable roll-power'>{{item.system.calcPower}}</div>
        <div class='item-prop'>{{localize (lookup @root.config.affinities item.system.affinity)}}</div>-->
        <div class="align-right"><i
            class="fa-solid fa-caret-up qty-up clickable"></i>&nbsp;{{item.system.quantity}}x&nbsp;<i
            class="fa-solid fa-caret-down qty-down clickable"></i></div>
        <div class='item-controls'>
          <a class='item-control item-edit' title='{{localize "DOCUMENT.Edit" type=' consumable'}}'>
            <i class='fas fa-edit'></i>
          </a>
          <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type=' consumable'}}'>
            <i class='fas fa-trash'></i>
          </a>
        </div>
      </li>
      <div class='item-prop'
        style="text-align:left; padding:4px; border-bottom: 1px solid #c9c7b8; margin-bottom:4px; justify-content: left;">
        {{item.system.shortEffect}}</div>
    </div>
    {{/each}}
  </div>
</ol>